@model PlayDiscGolf.ViewModels.User.UserSearchResultViewModel

@{
    Layout = null;
}

@if (Model.UserName != null)
{
<div class="d-flex">
    <p class="pl-4 mt-2">@Model.UserName</p>
    <a class="btn btn-success mb-5" style="margin-left:10%" asp-route-username="@Model.UserName" asp-action="AddFriend" asp-controller="User">Send friend request</a>
</div>
}


