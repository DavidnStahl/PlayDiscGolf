@model List<PlayDiscGolf.ViewModels.ScoreCard.PlayerCardViewModel>



<div class="form-group row">
    <div class="col-sm-3 pb-4">
        <input readonly class="form-control" asp-for="@Model[0].UserName" value="@Model[0].UserName">
    </div>
</div>

@if (Model.Count > 1)
{
    for (int i = 1; i < Model.Count; i++)
    {
        <div class="form-group row">
            <div class="col-sm-3 pb-4 form-horizontal">
                <input readonly class="form-control pb-2 " asp-for="@Model[i]UserName" value="@Model[i].UserName">
                <button id="@Model[i].UserName" type="button" class="tryThis btn btn-danger form-control">Remove</button>
            </div>
            
        </div>

    }
}


<script src="~/jquery/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

