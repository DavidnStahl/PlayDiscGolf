
@model PlayDiscGolf.Models.ViewModels.Account.LoginViewModel

<div class="container-fluid p-0 m-0">
    <div class="row pt-5 m-auto row justify-content-md-center">
        <div class="col-md-6 col-lg-6 pb-3">
            <div class="card card-custom border-primary border-0 bg-white text-black " style="min-height:600px;">
                <div style="width: 100%"><img id="LoginRegister" src="~/picture/Login.png"></div>
                <div class="card-body">
                    <h2>Login</h2>
                    <section>
                        <form id="account" method="post" asp-action="Login" asp-controller="Account">
                            <h4>Use a local account to log in.</h4>
                            <hr />
                            <div class="form-group">
                                <label asp-for="@Model.UserName"></label>
                                <input asp-for="@Model.UserName" class="form-control" />
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password"></label>
                                <input type="password" asp-for="@Model.Password" class="form-control" />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="@Model.RememberMe">
                                        <input asp-for="@Model.RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <div class="form-group">
                                <p>
                                    <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>





