@model List<PlayDiscGolf.ViewModels.User.FriendViewModel>

@if (Model.Count > 0)
{
    <div class="row pt-5 m-auto row justify-content-md-center bg-transparent">
        <div class="col-md-6 col-lg-6 pb-3">
                <table class="container table table-warning">
                    <thead>
                        <tr>
                            <th scope="col">Friend Request</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.UserName</td>
                                <td><a class="text-success" asp-route-friendID="@request.FriendID" asp-action="AcceptFriendRequest" asp-controller="Notification">Accept</a></td>
                                <td><a class="text-danger" asp-route-friendID="@request.FriendID" asp-action="DeclineFriendRequest" asp-controller="Notification">Decline</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            
        </div>
    </div>
}

