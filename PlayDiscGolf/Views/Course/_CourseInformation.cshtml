@model PlayDiscGolf.ViewModels.Course.CoursePageViewModel


@{
    var bestRound = "None";
    var averageRound = "None";

    if (Model.BestRound == "None")
    {

    }
    else
    {
        bestRound = Convert.ToInt32(Model.BestRound) > 0? "+" + Model.BestRound: Model.BestRound;
        averageRound = Convert.ToInt32(Model.AverageRound) > 0 ? "+" + Model.AverageRound : Model.AverageRound;
    }


}
<div class="container card bg-warning mb-2" style="width:auto;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Name: @Model.FullName</li>
        <li class="list-group-item">Holes: @Model.TotalHoles</li>
        <li class="list-group-item">Par: @Model.TotalParValue</li>
        <li class="list-group-item">Distance: @Model.TotalDistance</li>
        <li class="list-group-item">Played: @Model.NumberOfRounds.ToString()</li>
        <li class="list-group-item">Best Round: @bestRound</li>
        <li class="list-group-item">Average Round: @averageRound</li>
    </ul>
    <a style="width:25%" type="button" class="btn btn-success" asp-action="CreateScoreCard" asp-controller="ScoreCard"
       asp-route-courseID="@Model.CourseID.ToString()">Create Scorecard</a>
</div>

